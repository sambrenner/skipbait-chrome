{
	"manifest_version": 2,
	"name": "SkipBait",
	"description": "SkipBait is a webservice and browser extension that allows clickbait to be skipped over in daily web browsing.",
	"version": "0.1",
	"permissions": [
		"tabs",
		"https://skipbait.herokuapp.com/*"
	],
	"content_scripts": [{
		"matches": ["*://*/*"],
		"js": ["zepto.min.js", "skipbait.js"],
		"run_at": "document_end"
	}],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}